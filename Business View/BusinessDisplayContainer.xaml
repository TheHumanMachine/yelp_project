<UserControl x:Class="UIPractive.Business_View.BusinessDisplayContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIPractive.Business_View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#202225">
        <GroupBox Grid.Row="0" Header="Search Results" Foreground="#e0d7e3">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Name="searchResultsStackPanel"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
