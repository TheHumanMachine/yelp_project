<UserControl x:Class="UIPractive.BusinessDisplay.CheckInDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIPractive.BusinessDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid Background="#202225">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Background="Transparent" Name="dayTextbox"/>
        <TextBox Grid.Column="1" Background="Transparent" Name="countTextbox"/>
        <TextBox Grid.Column="2" Background="Transparent" Name="timeTextbox"/>
    </Grid>
</UserControl>
